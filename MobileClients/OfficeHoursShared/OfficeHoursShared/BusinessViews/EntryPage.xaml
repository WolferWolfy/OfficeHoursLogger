<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="OfficeHoursShared.EntryPage"
	xmlns:sys="clr-namespace:System;assembly=mscorlib">
	<ContentPage.Content>
	<StackLayout Orientation="Vertical"
	 Padding = "10">

	 <StackLayout Orientation="Horizontal">
	 	<Label HorizontalOptions="Start" Text="Name: " WidthRequest="100"/>
  		<Entry HorizontalOptions="FillAndExpand" Text="{Binding Name}"/>
	 </StackLayout>

	 <StackLayout Orientation="Horizontal">
	 	<Label HorizontalOptions="Start" Text="Direction: " WidthRequest="100"/>
	 	<Picker x:Name="DirectionPicker" HorizontalOptions="FillAndExpand" SelectedIndexChanged="OnSelectedIndexChanged"/>
	 </StackLayout>

	 <StackLayout Orientation="Horizontal">
	 	<Label HorizontalOptions="Start" Text="Time: "   WidthRequest="100"/>
	 	<TimePicker HorizontalOptions="FillAndExpand" Time ="{Binding Time}"/> 
	 </StackLayout>

</StackLayout>


	</ContentPage.Content>
</ContentPage>
